<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <Frame name="BidDKPOptionsFrame" parent="UIParent" hidden="true" movable="true" enableMouse="true">
        <Size>
            <AbsDimension x="384" y="512" />
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset x="312" y="-124" />
            </Anchor>
        </Anchors>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\Spellbook\Spellbook-Icon">
                    <Size>
                        <AbsDimension x="58" y="58"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset x="10" y="-8"/>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="BarTopLeft" file="Interface\Spellbook\UI-SpellbookPanel-TopLeft">
                    <Size>
                        <AbsDimension x="256" y="256"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                    </Anchors>
                </Texture>
                <Texture file="Interface\Spellbook\UI-SpellbookPanel-TopRight">
                    <Size>
                        <AbsDimension x="128" y="256"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </Texture>
                <Texture file="Interface\Spellbook\UI-SpellbookPanel-BotLeft">
                    <Size>
                        <AbsDimension x="256" y="256"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT"/>
                    </Anchors>
                </Texture>
                <Texture file="Interface\Spellbook\UI-SpellbookPanel-BotRight">
                    <Size>
                        <AbsDimension x="128" y="256"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>
                </Texture>
                <FontString name="$parentTitle" inherits="GameFontNormal" text="Bid_DKP Options">
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset x="-6" y="233"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="$parentTopText" inherits="GameFontNormal" font="Fonts\FRIZQT__.TTF" text="">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset x="0" y="-90"/>
                        </Anchor>
                    </Anchors>
                    <FontHeight val="16" />
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-28" y="-10" />
                    </Anchor>
                </Anchors>
            </Button>


            <CheckButton name="$parentEnableAutoClose" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-104"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Auto-close bid window")
					</OnLoad>
					<OnClick>
					    BidDKP_HandleCheckbox(this)
					</OnClick>
				</Scripts>
			</CheckButton>

            <CheckButton name="$parentPreventSelfOverbid" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentEnableAutoClose" relativePoint="BOTTOM">
						<Offset x="-16" y="-4"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Prevent self-overbidding")
					</OnLoad>
					<OnClick>
					    BidDKP_HandleCheckbox(this)
					</OnClick>
				</Scripts>
			</CheckButton>
        </Frames>

        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>
